<div class="flex flex-col gap-4 items-center justify-center py-8">
  <h2 class="text-xl text-center text-orange-600 font-bold">Sign up</h2>

  <div class="w-96">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="space-y-4">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: 'w-full border rounded' },
                    label_html: { class: 'block' } %>
        <%= f.input :username,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "username", class: 'w-full border rounded' },
                    label_html: { class: 'block' } %>
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password", class: 'w-full border rounded' },
                    label_html: { class: 'block' } %>
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password", class: 'w-full border rounded' },
                    label_html: { class: 'block' } %>
      </div>

      <div class="my-4 flex justify-left">
        <%= f.button :submit, "Sign up", class: 'text-black bg-lime-600 px-4 py-2 border border-white rounded hover:bg-black hover:text-white transition duration-200 m-auto' %>
      </div>
    <% end %>
  </div>

  <div class="flex flex-col items-center">
    <p>Already have an account?</p>
    <%= link_to "Log in", new_session_path(resource_name), class: "text-lime-600" %>
  </div>
</div>
